[user]
	name = Peter Maatman
	email = blackwolf12333@gmail.com
[color]
	ui = auto
[core]
	editor = nvim
	autocrlf = input
[pull]
	rebase = true
[alias]
	recent = for-each-ref --sort=-committerdate --format='%(committerdate:short) %(refname)' refs/heads
	co = checkout
	last = log --no-merges master..
	fixup = commit --fixup
	amend = commit --amend
[commit]
	verbose = true
[push]
	autoSetupRemote = true
[rebase]
	autoSquash = true
